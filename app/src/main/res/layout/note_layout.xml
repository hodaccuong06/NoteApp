<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/notelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:focusable="true"
        android:padding="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/liner"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textviewtitlenote"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="5dp"
                    android:text="Tiêu đề"
                    android:layout_marginStart="4dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat,SmallSp" />

                <ImageView
                    android:id="@+id/optionnote"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/more" />
            </LinearLayout>

            <TextView
                android:id="@+id/textviewnote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/liner"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/roboto_regular"
                android:ellipsize="end"
                android:maxLines="8"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="@string/common_google_play_services_enable_text" />

            <TextView
                android:id="@+id/datenote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textviewnote"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:maxLines="12"
                android:padding="5dp"
                android:textSize="10sp"
                app:drawableStartCompat="@drawable/calender"
                android:drawableTint="@color/black"
                android:layout_alignParentEnd="true"

                tools:ignore="SmallSp,UseCompatTextViewDrawableXml"
                tools:text="12/13/2002" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>